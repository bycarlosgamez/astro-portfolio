<style>
  nav {
    max-width: 40rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  ul {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 0.5rem;
    padding: 0;
    margin: 0 auto 0 0;
    width: 100%;
  }

  nav li {
    cursor: pointer;
    width: 100%;
    opacity: 0.8;
    list-style: none;
    font-size: 0.95rem;

    background-color: var(--background-secondary);
    border-radius: 10px;
    border: 0;
    padding: 5px 10px;
    transition: all 0.2s ease-in-out;
  }

  a,
  button {
    color: var(--grey-400);
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.25rem;
    padding: 5px 10px;
    border-radius: 10px;
    text-decoration: none;
  }

  button {
    cursor: pointer;
    width: 100%;
    font-size: 0.95rem;
    padding: 5px 10px;
    border: none;
    background: none;
  }

  svg {
    fill: var(--grey-400);
  }

  @media (min-width: 768px) {
    nav {
      flex-direction: row;
      align-items: center;
      justify-content: center;
      padding: 2rem 0;
    }

    ul {
      flex-direction: row;
      flex-wrap: nowrap;
      padding: 0;
      margin: 0 auto 0 0;
    }

    nav li {
      background-color: transparent;
      width: min-content;
      border-radius: 0;
      border-bottom: 1px solid transparent;
    }

    a,
    button {
      color: var(--grey-400);
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 0.25rem;
      padding: 0.5rem 1rem;
      text-decoration: none;
    }

    nav li:hover {
      transform: scale(0.9);
      border-bottom: 1px solid var(--accent);
    }
  }
</style>

<script>
  const btn = document.querySelector('.copyBtn');

  if (btn) {
    btn.addEventListener('click', () => {
      copyToClipboard();
    });

    const copyToClipboard = () => {
      const email = 'carlos.gamez.glez@gmail.com';
      navigator.clipboard.writeText(email);
      alert('Email copied to clipboard!');
    };
  }
</script>
